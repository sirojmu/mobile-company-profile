<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".produk.Gamonang">

    <Toolbar
        android:id="@+id/toolbar"
        android:titleTextColor="@android:color/white"
        android:background="#00ACC1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </Toolbar>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.codesgood.views.JustifiedTextView
                android:layout_margin="5dp"
                android:textColor="@android:color/black"
                android:text="@string/keterangan_gamonang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="@android:color/black"
                android:layout_margin="5dp"
                android:text="Daftar Logam Non-Uang:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Lencana"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:gravity="center"/>
            <ImageView
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:src="@drawable/lencana"
                android:layout_width="200dp"
                android:layout_height="200dp"/>
            <com.codesgood.views.JustifiedTextView
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:text="@string/lencana"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Commemorative Coin"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:gravity="center"/>
            <ImageView
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:src="@drawable/memorative_coin"
                android:layout_width="200dp"
                android:layout_height="200dp"/>
            <com.codesgood.views.JustifiedTextView
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:text="@string/memmorative_coin"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textStyle="bold"
                android:text="Medali"
                android:textColor="@android:color/black"
                android:gravity="center"/>
            <ImageView
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:src="@drawable/medali"
                android:layout_width="200dp"
                android:layout_height="200dp"/>
            <com.codesgood.views.JustifiedTextView
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:text="@string/medali"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textStyle="bold"
                android:text="Plakat"
                android:textColor="@android:color/black"
                android:gravity="center"/>
            <ImageView
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:src="@drawable/plakat"
                android:layout_width="200dp"
                android:layout_height="200dp"/>
            <com.codesgood.views.JustifiedTextView
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:text="@string/plakat"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textStyle="bold"
                android:text="Pin"
                android:textColor="@android:color/black"
                android:gravity="center"/>
            <ImageView
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:src="@drawable/pin"
                android:layout_width="200dp"
                android:layout_height="200dp"/>
            <com.codesgood.views.JustifiedTextView
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:text="@string/pin"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textStyle="bold"
                android:text="Emas"
                android:textColor="@android:color/black"
                android:gravity="center"/>
            <ImageView
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:src="@drawable/emas"
                android:layout_width="200dp"
                android:layout_height="200dp"/>
            <com.codesgood.views.JustifiedTextView
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:text="@string/emas"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>